        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deliverable7"
        mc:Ignorable="d"
        Title="frmChangeMapDimensions" Height="172.045" Width="208.48" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="lblNotHeight" Content="Height:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblNotWidth" Content="Width:" HorizontalAlignment="Left" Margin="14,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Height="23" Margin="63,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" Text="10"/>
